<div class="row">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Date</th>
        <th>Author</th>
        <th>Type</th>
      </tr>
    </thead>
    <tbody>
      <% for version in parent.versions %>
        <tr>
          <td><%= version.created_at.to_s(:rfc822) %></td>
          <td><% admin = Admin.find(version.whodunnit.to_i) %>
            <%= image_tag( admin.avatar_url(:thumb), 
              width: "30px", 
              height: "30px", 
              title: admin.name, 
              alt: admin.name) 
            %>
          </td>
          <td><%= version.event %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>