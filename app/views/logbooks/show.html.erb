<% title t ".title" %>

<div class="row">

  <div class="span1 offset5">

    <div class="controls toggle switch" 
      data-toggleButton-label-enabled="Approved" 
      data-toggleButton-label-disabled="Not Approved" 
      data-toggleButton-style-enabled="success" 
      data-toggleButton-style-disabled="danger" 
      data-toggleButton-height="40"
      data-toggleButton-width="250"> 
    <%= check_box_tag :approved, @logbook.id, @logbook.approved?, class: 'approve-toggle', data: { href: set_approved_logbook_path(@logbook) } %>
    </div>

  </div>

  <div class="span6">
    <%= render partial: "shared/api_links", locals: {json: true, xml: true} %>
  </div>

</div>

<div class="pull-right">
  <dl class="dl-horizontal">
    <dt>Admin:</dt>
    <dd>
      <%= link_to image_tag(@logbook.admin.avatar.url(:thumb), 
        width: "30px", 
        height: "30px", 
        title: @logbook.admin.name, 
        alt: @logbook.admin.name),
        @logbook.admin %>
    </dd>
  </dl>
</div>

<dl class="dl-horizontal">

  <dt>User:</dt>
  <dd>
    <%= link_to image_tag(@logbook.user.avatar.url(:thumb), 
      width: "30px", 
      height: "30px", 
      title: @logbook.user.name, 
      alt: @logbook.user.name), 
      @logbook.user %>
  </dd>

  <dt>Date:</dt>
  <dd><%= @logbook.date.strftime("%B %Y") %></dd>
  

</dl>



<%= render partial: "logbooks/logged_days" %>


<%= link_to 'Edit', edit_logbook_path(@logbook) %> |
<%= link_to 'Back', logbooks_path %>
