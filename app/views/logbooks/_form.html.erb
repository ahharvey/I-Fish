<%= simple_form_for(@logbook) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :stime %>
    <%= f.input :ttime %>
    <%= f.input :optime %>
    <%= f.input :fuel %>
    <%= f.input :sail %>
    <%= f.input :net %>
    <%= f.input :line %>
    <%= f.association :fish %>
    <%= f.input :quantity %>
    <%= f.input :weight %>
    <%= f.input :value %>
    <%= f.input :conditions %>
    <%= f.input :moon %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
