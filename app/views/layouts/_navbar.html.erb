<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">

    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "FishNet", root_path, class: "brand" %>
      <div class="nav-collapse collapse navbar-responsive-collapse">

        <%= render partial: 'layouts/navbar_modules/nav' %>
                
        <ul class="nav secondary-nav pull-right">
          <li>
            <%= render partial: 'layouts/navbar_modules/locale_menu' %>
          </li>
          <li class="divider-vertical"></li>
  
          <% if admin_signed_in? || user_signed_in? %>
            <li>
              <p class="navbar-text">
                <%= image_tag @currently_signed_in.avatar_url(:thumb), width: "30px", height: "30px" if @currently_signed_in.avatar? %>
                <%= link_to @currently_signed_in.name, @currently_signed_in %>
              </p>
            </li>
            <% if admin_signed_in? %>
              <li><%=render partial: 'layouts/navbar_modules/admin_menu' %></li>
            <% elsif user_signed_in? %>
              <li><%=render partial: 'layouts/navbar_modules/user_menu' %></li>
            <% end %>
          <% else %>
            <li><%=render partial: 'layouts/navbar_modules/guest_menu' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>