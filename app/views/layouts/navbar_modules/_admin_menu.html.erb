<%= link_to "javascript:void(0)", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
	
	<% present @currently_signed_in do |admin_presenter| %>
		<%= admin_presenter.avatar %>
	<% end %>
	
<% end %>
<ul class="dropdown-menu">	
	<li>
		<%= link_to @currently_signed_in do %>
      <%= icon fa_profile, "", class: 'fa-fw' %>
      <%= @currently_signed_in.name.titlecase %>
    <% end %>
	</li>
	<li>
		<%= link_to edit_admin_path(@currently_signed_in), title: t("devise.edit") do %>
			<%= icon fa_edit_profile, "", class: 'fa-fw' %>
			Edit profile
		<% end %>
	<li>
	<li>
		<%= link_to edit_admin_registration_path, title: t("devise.edit") do %>
			<%= icon fa_password, "", class: 'fa-fw'  %>
			Security
		<% end %>
	<li>
	<li class="divider"></li>
	<li>
		<%= link_to destroy_admin_session_path, method: :delete, title: t("devise.signout") do %>
			<%= icon fa_logout, "", class: 'fa-fw' %>
			Sign Out
		<% end %>
	<li>
</ul>