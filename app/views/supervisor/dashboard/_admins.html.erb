<h3>Team Members</h3>
<%= link_to "See All", admins_path %>
<table class="table table-striped table-condensed">
 
    <tr>
    	<th></th>
      <th>Name</th>
      <th>Approved</th>
    </tr>
  
  	<%if @admins.empty? %>
  		<tr>
  			<td></td>
  			<td>All APPROVED</td>
  		</tr>
  	<% else %>
	    <% for admin in @admins %>
			  <tr>
			  	<td><%= image_tag(admin.avatar_url(:thumb), width: "30px", height: "30px") %></td>
			    <td><%= link_to admin.name, [:panel, admin] %></td>
			    <td>
			    	<div class="controls switch switch-mini" data-on= "success" data-off="danger" data-on-label="<i class='icon-ok icon-white'></i>" data-off-label= "<i class='icon-remove icon-white'></i>">
			    	  <%= check_box_tag :approved, admin.id, admin.approved?, class: 'approve-toggle', data: { href: set_approved_panel_admin_path(admin) } %>
			      </div>
			    </td>
			  </tr>
			<% end %>
 		<% end %>
 </table>