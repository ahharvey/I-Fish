<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Staff</h3>
  </div>
  <div class="panel-body">
    <% if can? :update, @company %>
      <%= form_tag [:add_user, @company], class: "form", :remote=>true do %>
        <div class="input-group">
          <%= text_field_tag :get_user, "", class: "form-control", placeholder: "Add a team member...", autocomplete: "off", data: { autocomplete_source: User.order(:email).map(&:email) } %>
          <div class="input-group-btn">
            <%= button_tag add_icon, class: "btn btn-success" %>
          </div>
        </div>
      <% end %>

    <% end %>
    <%= render partial: 'user_list' %>
  </div>
</div>