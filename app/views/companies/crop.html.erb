<% title t ".title" %>

<div class="row">
  <div class="col-xs-6">
    <div class="pull-right">
      <%= image_tag @company.avatar_url(:large), id: "company_cropbox" %>
    </div>
  </div>
  <div class="col-xs-1">
    <div class="jcrop" style="width:100px; height:100px; overflow:hidden">
      <%= image_tag @company.avatar.url(:large), :id => "preview" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-7">
    <%= form_for( @company, as: :company, url: company_path(@company), :html => {:method => :put, :multipart => true}) do |f| %>
      <% %w[x y w h].each do |attribute| %>
          <%= f.hidden_field "crop_#{attribute}" %>
      <% end %>
      <div class="form-actions">
        <%= content_tag :button, type: :submit, class: 'btn btn-primary pull-right', style:"margin-left:20px" do %>
            Crop
         <% end %>
      </div>
    <% end %>
  </div>
</div>




