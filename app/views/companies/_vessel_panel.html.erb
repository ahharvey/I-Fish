<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Vessels</h3>
  </div>
  <div class="panel-body">
    <% if can? :update, @company %>
      <%= form_tag [:add_vessel, @company], class: "form", :remote=>true do %>
        <div class="input-group">
          <%= text_field_tag :get_vessel, "", class: "form-control", placeholder: "Add a vessel...", autocomplete: "off", data: { autocomplete_source: Vessel.order(:ap2hi_ref).map(&:ap2hi_ref) } %>
          <div class="input-group-btn">
            <%= button_tag add_icon, class: "btn btn-success" %>
          </div>
        </div>
      <% end %>

    <% end %>
    <%= render partial: 'vessel_list' %>
    <% if can? :update, @company %>
      <%= link_to  t( :generate_stickers ), generate_stickers_vessels_path( company_id: @company.id), class: 'btn btn-block btn-default' %>
    <% end %>
  </div>
</div>