<% subtitle t ".title" %>
<% title @company.name %>

<div class="row">

  <div class="col-xs-12 col-sm-6 col-md-4">
  	<div class="panel panel-default">
		  <div class="panel-heading"><b>Current Catch Composition (<%= Date.today.year %>)</b></div>
		  <div class="panel-body">
			  <%= pie_chart current_catch_composition_company_path(@company) %>
		  </div>
		</div>
  </div>

  <div class="col-xs-12 col-sm-6 col-md-4">
  	<div class="panel panel-default">
		  <div class="panel-heading"><b>Historical Average Catch Composition</b></div>
		  <div class="panel-body">
		    <%= pie_chart average_catch_composition_company_path(@company) %>
		  </div>
		</div>
  </div>

  <div class="col-xs-12 col-md-4">
	  <div class="panel panel-default">
		  <div class="panel-heading"><b>Fuel Efficiency</b></div>
		  <div class="panel-body">
		    <div id="fuel_utilization" data-url="<%= current_fuel_utilization_company_path(@company, format: :js) %>"></div>
		  </div>
		</div>

  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6">
  	<div class="panel panel-default">
		  <div class="panel-heading"><b>Current Monthly Production (<%= Date.today.year %>)</b></div>
		  <div class="panel-body">
		    <%= column_chart current_monthly_production_company_path(@company), stacked: true, library: { vAxis: { title: 'kg' } } %>
		  </div>
		</div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6">
  	<div class="panel panel-default">
		  <div class="panel-heading"><b>Historical Average Monthly Production</b></div>
		  <div class="panel-body">
		    <%= column_chart average_monthly_production_company_path(@company), stacked: true, library: { vAxis: { title: 'kg' } } %>
		  </div>
		</div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6">
  	<div class="panel panel-default">
		  <div class="panel-heading"><b>Current Monthly CPUE (<%= Date.today.year %>)</b></div>
		  <div class="panel-body">
		    <%= column_chart current_monthly_cpue_company_path(@company) %>
		  </div>
		</div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6">
  	<div class="panel panel-default">
		  <div class="panel-heading"><b>Historical Average Monthly CPUE</b></div>
		  <div class="panel-body">
		    <%= column_chart average_monthly_cpue_company_path(@company) %>
		  </div>
		</div>
  </div>
</div>
