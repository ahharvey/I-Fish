<% title "Landings" %>

<% begin %>
<table class="table table-striped table-condensed">
  <tr>
    <th>Vessel reg</th>
    <th>Vessel name</th>
    <th>Grid square</th>
    <th>Type</th>
    <th>Time out</th>
    <th>Time in</th>
    <th>Engine</th>
    <th>Fuel</th>
    <th>Sail</th>
    <th>Crew</th>
    <th>Boat size</th>
    <th>Gear</th>
    <th>Quantity</th>
    <th>Weight</th>
    <th>Value</th>
    <th></th>
  </tr>

  <% @landings.each do |landing| %>
    <tr>
      <td><%= landing.vessel_ref %></td>
      <td><%= landing.vessel_name %></td>
      <td><%= landing.grid_square %></td>
      <td><%= landing.type %></td>
      <td><%= landing.time_out.to_s(:triptime) %></td>
      <td><%= landing.time_in.to_s(:triptime) %></td>
      <td><%= landing.engine %></td>
      <td><%= landing.fuel %></td>
      <td><%= landing.sail %></td>
      <td><%= landing.crew %></td>
      <td><%= landing.boat_size %></td>
      <td><%= link_to truncate(landing.gear.name, length: 20), landing.gear, title:landing.gear.name %></td>
      <td><%= landing.quantity %></td>
      <td><%= landing.weight %></td>
      <td><%= landing.value %></td>
      <td>
        <%= link_to show_icon, landing %>
        <%= link_to edit_icon, edit_landing_path(landing) %>
        <%= link_to destroy_icon, landing, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<br />
<% rescue %>

<% end %>
<%= link_to 'New Landing', new_landing_path %>
