<% title "Sign up" %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true, class: 'form-horizontal'}) do |f| %>
    <%= devise_error_messages! %>

    <%= f.input :avatar %>
    
    <%= f.input :name %>

    <%= f.input :email %>

    <%= f.input :password %>

    <%= f.input :password_confirmation %>

    <div class="form-actions">
      <%= f.submit "Sign up"  %>
    </div>
<% end %>

<%= render "devise/shared/links" %>