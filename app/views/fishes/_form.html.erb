
<%= simple_form_for @fish, url: fishes_path, method: :post, html: {class: 'form form-horizontal'} do |f| %>


  <%= f.input :fishery_id, as: :hidden %>

  <div class="row">
    <div class="col-xs-12 col-md-5 col-md-offset-3">

      <div class="control-group">
        <%= f.label :threatened, class: "toggle-label" %>

 
            <%= f.check_box :threatened, class: 'toggle-switch', data: {
              size: 'large',
              'on-color' => 'danger',
              'off-color' => 'success',
              'on-text' => "YES",
              'off-text' => "NO"
            } %>



      </div>

    </div>
  </div>
  <div class="row">

    <div class="col-xs-12 col-md-4 col-md-offset-1">


  
      <%= f.input :order %>
    
      <%= f.input :family %>
    
      <%= f.input :scientific_name %>
    
      <%= f.input :fishbase_name %>
    
      <%= f.input :english_name %>
    
      <%= f.input :indonesia_name %>

      <%= f.input :code %>

    </div>

    <div class="cold-xs-12 col-md-4 col-md-offset-1">

      <%= f.input :a %>
   
      <%= f.input :b %>

      <%= f.input :max %>

      <%= f.input :mat %>

      <%= f.input :opt %>
  
    </div>

  </div>
    

  <div class="form-actions">

    <%= content_tag :button, type: :submit, class: 'btn btn-primary pull-right', style:"margin-left:20px" do %>
      Save
    <% end %>


    <% if !f.object.new_record? %>
      <%= link_to "Cancel", @fish, :class=>"btn pull-right" %>

    <% else %>
      <%= link_to "Cancel", fishes_path, :class=>"btn pull-right" %>
    <% end %> 
  </div>
<% end %>
