<% title t ".title" %>

<%= link_to new_gear_path, class: "btn btn-mini", title: "Create new gear", alt: "New gear" do %>
  <%= add_icon %>
  NEW
<% end %>

<%= render partial: "shared/api_links" %>

<table class="table table-striped table-condensed">
  <tr>    
    <th><%= Gear.human_attribute_name(:alpha_code) %></th>
    <th><%= Gear.human_attribute_name(:fao_code) %></th>
    <th><%= Gear.human_attribute_name(:num_code) %></th>
    <th><%= Gear.human_attribute_name(:name) %></th>
    <th></th>
  </tr>

<% @gears.each do |gear| %>
  <tr>
    <td><%= gear.alpha_code %></td>
    <td><%= gear.fao_code %></td>
    <td><%= gear.num_code %></td>
    <td><%= gear.name %></td>
    <td>
        <%= link_to show_icon, gear %>
        <%= link_to edit_icon, edit_gear_path(gear) %>
        <%= link_to destroy_icon, gear, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Gear', new_gear_path %>
