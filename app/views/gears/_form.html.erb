<%= simple_form_for @gear, html: {class: 'form form-horizontal'} do |f| %>

  <div class="row">

    <div class="col-xs-12 col-md-6 col-md-offset-3">

      <%= f.input :fishery_id, as: :hidden %>

      <%= f.input :cat_ind %>

      <%= f.input :cat_eng %>

      <%= f.input :sub_cat_ind %>

      <%= f.input :sub_cat_eng %>

      <%= f.input :type_ind %>

      <%= f.input :type_eng %>

      <%= f.input :name %>

      <%= f.input :alpha_code %>

      <%= f.input :num_code %>

      <%= f.input :fao_code %>

    </div>

  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3 form-actions">

      <%= content_tag :button, type: :submit, class: 'btn btn-primary pull-right', style:"margin-left:20px" do %>
        Save
      <% end %>


      <% if !f.object.new_record? %>
        <%= link_to "Cancel", @gear, :class=>"btn pull-right" %>

      <% else %>
        <%= link_to "Cancel", gears_path, :class=>"btn pull-right" %>
      <% end %> 

    </div>
  </div>
<% end %>

