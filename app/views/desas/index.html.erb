<h1>Listing desa</h1>

<table class="table-bordered table-striped table table-hover">
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th></th>
  </tr>

  <% @desas.each do |desa| %>
    <tr>
      <td><%= desa.name %></td>
      <td><%= desa.code %></td>
      <td>
        <%= link_to 'Show', desa %>
        <%= link_to 'Edit', edit_desa_path(desa) %>
        <%= link_to 'Destroy', desa, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Desa', new_desa_path %>
