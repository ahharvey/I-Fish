<% present carrier_loading do |carrier_loading_presenter| %> 
  <%= content_tag_for :tr, carrier_loading do %>
    <td>
      <% if carrier_loading.approved? %>
        <span class="label label-success"><i class='fa fa-check'></i></span>
      <% elsif carrier_loading.rejected? %>
        <span class="label label-important"><i class='fa fa-ban'></i></span>
      <% elsif carrier_loading.pending? %>
        <span class="label label-warning"><i class='fa fa-warning'></i></span>
      <% end %>
    </td>
    <td><%= carrier_loading_presenter.date %></td>
    <td><%= carrier_loading_presenter.ap2hi_ref %></td>
    <td><%= carrier_loading_presenter.fish %></td>
    <td class='hidden-xs'><%= carrier_loading_presenter.location %></td>
    <td class='hidden-xs'><%= carrier_loading_presenter.size %></td>
    <td class='hidden-xs'><%= carrier_loading_presenter.grade %></td>
    <td><%= carrier_loading_presenter.quantity %></td>
    <td>
      <%= link_to "Edit carrier loadings", edit_carrier_loading_path(carrier_loading), class: "btn btn-xs btn-block btn-warning" %>
    </td>
  <% end %>
<% end %>