<div id="templates_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="templates_modal_Label" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Download Templates</h3>
  </div>
  <div class="modal-body">
  	
	  <%= link_to "/Database.template.xlsx", title: "Survey template" do %>
	    <div class="modal-icon">
	      <%= excel_icon %>
	    </div>
	    <div class="modal-text">
		    <b><%= t("modal.download.survey.spreadsheet.title") %></b>
		    <br />
		    <small><%= t("modal.download.logbook.spreadsheet.text") %></small>
		  </div>
	  <% end %>
	  
	  <br />
	  <br />
	  
	  <%= link_to "/Logbook.template.xlsx", title: "Logbook template" do %>
	    <div class="modal-icon">
	      <%= excel_icon %>
	    </div>
	    <div class="modal-text">
	      <b><%= t("modal.download.logbook.spreadsheet.title") %></b>
	      <br />
	      <small><%= t("modal.download.logbook.spreadsheet.text") %></small>
	    </div>
	  <% end %>

	  <br />
	  <br />
	  
	  <%= link_to "/Form A.pdf", title: "Survey forms" do %>
	    <div class="modal-icon">
	      <%= doc_icon %>
	    </div>
	    <div class="modal-text">
	      <b><%= t("modal.download.survey.form.title") %></b>
	      <br />
	      <small><%= t("modal.download.survey.form.text") %></small>
	    </div>
	  <% end %>

	  <br />
	  <br />
	  
	  <%= link_to "/Form B.pdf", title: "Logbook forms" do %>
	    <div class="modal-icon">
	      <%= doc_icon %>
	    </div>
	    <div class="modal-text">
	      <b><%= t("modal.download.logbook.form.title") %></b>
	      <br />
	      <small><%= t("modal.download.logbook.form.text") %></small>
	    </div>
	  <% end %>
	</div>
  <div class="modal-footer">
    <a href="#" class="btn">Close</a>
  </div>
</div>