<% title 'Select Vessel' %>
<div class='row'>
  <div class='col-xs-12 col-sm-8 col-sm-offset-2'>
    <% if @label == 'bait_loadings' %>
      <p class='lead'>Which Vessel do you want to import Bait Loadings for?</p>
    <% end %>
    <% if @label == 'unloadings' %>
      <p class='lead'>Which Vessel do you want to import Unloadings for?</p>
    <% end %>
  </div>
</div>

<div class='row'>
  <div class='col-xs-12 col-sm-8 col-sm-offset-2'>
    <table class='table table-condensed datatable'>
      <thead>

        <th><%= Vessel.human_attribute_name(:ap2hi_ref) %></th>
        <th><%= Vessel.human_attribute_name(:name) %></th>
        <th><%= Vessel.human_attribute_name(:company_id) %></th>
        <th class='nosort'></th>
      </thead>
      <tbody>
        <% @vessels.each do |vessel| %>
          <tr>
            <td><%= vessel.ap2hi_ref %></td>
            <td><%= vessel.name %></td>
            <td><%= vessel.company.try(:name) %></td>
            <td><%= link_to 'Import', new_vessel_importer_path(vessel, label: @label), class: 'btn btn-default btn-xs', title: "Import to #{vessel.ap2hi_ref}" %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
