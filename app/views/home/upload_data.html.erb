<% title "Import Data" %>

<div class="well row">
  <div class="col-xs-12 col-md-6">
    <%= form_tag home_process_upload_data_path, :class => "form-inline", multipart: true do %>
      <div class="form-group">
        <%= file_field_tag "file" %>
      </div>
      <div class="form-group">
        <%= content_tag :button, type: :submit, class: 'btn btn-primary' do %>
          <%= upload_icon %>
          Upload
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-12 col-md-3 col-md-offset-3">
    <div class="row">
      <%= link_to "mailto:#{MAILER_ADDRESS}", class: "btn btn-info col-xs-12" do %>
        <%= email_icon %>
        Submit via email
      <% end %>
    </div>
    <div class="row">

      <%= link_to "/addresscard.vcf", class: "btn btn-default col-xs-12" do %>
        <%= addressbook_icon %>
        Add to Addressbook
      <% end %>
    </div>
  </div>
  
</div>


<div class="row">
  <table class="table table-striped table-condensed">
    <tr>
      <th>Filename</th>
      <th>Filesize</th>
    </tr>

    <% @files.each do |file| %>
      <tr>
        <td><%= link_to file.filename, file %></td>
        <td><%= file.filesize %></td>
      </tr>
    <% end %>
  </table>
</div>

<br />
