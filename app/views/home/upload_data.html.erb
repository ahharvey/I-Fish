<% title "Import Data" %>

<div class="well row-fluid">
  <div class="span6">
    <%= form_tag home_process_upload_data_path, :class => "form-inline", multipart: true do %>
      <%= file_field_tag "file" %>
      <%= content_tag :button, type: :submit, class: 'btn btn-primary' do %>
        <%= upload_icon %>
        Upload
      <% end %>
    <% end %>
  </div>
  <div class="span3 offset3">
    <div class="row-fluid">
      <%= link_to "mailto:#{MAILER_ADDRESS}", class: "btn btn-info span12" do %>
        <%= email_icon %>
        Submit via email
      <% end %>
    </div>
    <div class="row-fluid">

      <%= link_to "/addresscard.vcf", class: "btn span12" do %>
        <%= addressbook_icon %>
        Add to Addressbook
      <% end %>
    </div>
  </div>
  
</div>


<div class="row-fluid">
  <table class="table table-striped table-condensed">
    <tr>
      <th>Filename</th>
      <th>Filesize</th>
    </tr>

    <% @files.each do |file| %>
      <tr>
        <td><%= link_to file.filename, file %></td>
        <td><%= file.filesize %></td>
      </tr>
    <% end %>
  </table>
</div>

<br />
