<% title "Import Data" %>

<div class="well">
  <%= form_tag home_process_upload_data_path, :class => "form-inline", multipart: true do %>
    <%= file_field_tag "file" %>
    <%= content_tag :button, type: :submit, class: 'btn btn-primary' do %>
		  <%= upload_icon %>
		  Upload
    <% end %>
  <% end %>
</div>



<table class="table table-striped table-condensed">
  <tr>
    <th>Filename</th>
    <th>Filesize</th>
  </tr>

  <% @files.each do |file| %>
    <tr>
      <td><%= file.filename %></td>
      <td><%= file.filesize %></td>
    </tr>
  <% end %>
</table>

