<% title "Import Data" %>

<div class="well">
  <%= form_tag home_process_upload_data_path, :class => "form-inline", multipart: true do %>
    <%= file_field_tag "file" %>
    <%= content_tag :button, type: :submit, class: 'btn btn-primary' do %>
		  <%= upload_icon %>
		  Upload
    <% end %>
    <%= link_to "mailto:#{MAILER_ADDRESS}", class: "btn btn-info" do %>
      <%= email_icon %>
      Submit via email
    <% end %>

    <%= link_to "/addresscard.vcf", class: "btn" do %>
      <%= addressbook_icon %>
      Add to Addressbook
    <% end %>
    
  <% end %>
  
  
</div>



<table class="table table-striped table-condensed">
  <tr>
    <th>Filename</th>
    <th>Filesize</th>
  </tr>

  <% @files.each do |file| %>
    <tr>
      <td><%= link_to file.filename, file %></td>
      <td><%= file.filesize %></td>
    </tr>
  <% end %>
</table>

