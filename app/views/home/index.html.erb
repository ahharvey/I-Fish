<% title "FishNet" %>
<div class="container">
	<div class="row">
		<%= link_to provinces_path do %>
		  <div class="span2 offset1 well well-large report-button">
		  	Province Reports
		  </div>
		<% end %>
		<%= link_to districts_path do %>
		  <div class="span2 well well-large report-button">
		  	District Reports
		  </div>
		<% end %>
		<%= link_to fisheries_path do %>
		  <div class="span2 well well-large report-button">
		  	Fishery Reports
		  </div>
		<% end %>
		<%= link_to provinces_path do %>
		  <div class="span2 well well-large report-button">
		  	Supervisor Reports
		  </div>
		<% end %>
	</div>
	<div class="row">
		<div class="span6 offset3">
			<h5>Recent Activity</h5>

			<% for survey in @surveys %>
				<div class="row">
					<div class="well well-large">
						<div class="media">
							<%= link_to survey.admin, class: "pull-left" do %>
								<%= image_tag survey.admin.avatar_url(:thumb), width: "50px", height: "50px", class:"media-object" if survey.admin.avatar? %>
							<% end %>
							<div class="media-body">
								<%= link_to survey.admin.name, survey.admin %> did a survey in <%= link_to survey.desa.name, survey.desa %> for the <%= link_to survey.fishery.name, survey.fishery %> fishery.
							</div>
						</div>				
					</div>
				</div>
			<% end %>
			<div class="row">
				<div class="pagination">
					<ul>
						<li>
							<%= link_to_previous_page @surveys, 'Previous Page', :remote => true %>
						</li>
						<li>
							<%= link_to_next_page @surveys, 'Next Page', :remote => true %>
						</li>
						
					</ul>
				</div>
				
			</div>
		</div>
		
	</div>
</div>