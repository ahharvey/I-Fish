<% title t ".title" %>

<table class="table table-striped table-condensed">
  <tr>
    <th><%= District.human_attribute_name(:name) %></th>
    <th></th>
  </tr>
  <% @districts.each do |district| %>
    <tr>
      
      <td><%= district.name %></td>
      
      <td>
        <%= link_to show_icon, district %>
        <%= link_to edit_icon, edit_district_path(district) %>
        <%= link_to destroy_icon, district, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New District', new_district_path %>
