<% title t ".title" %>

<%= render partial: "shared/api_links", :locals => { xls: true, pdf: true, csv: false, json: true, xml: true } %>

<%= simple_form_for(@district, 
                :as => 'district', 
                :url => district_path(@district), 
                :html => { 
                  :class => 'form-horizontal', 
                  :method => 'get', 
                  :multipart => true 
                },
                remote: true
                ) do |f| %>
  Select report year: 
  
  <%= f.input :year, 
    collection: 2010..2015,
    selected: Date.today.year,
    input_html: {
      class: "report_year"
      } %>
  <% end %>

<%= render partial: 'effort_by_gear' %>

<%= render partial: 'effort_by_vessel' %>

<%= render partial: 'effort_by_species' %>

<%= render partial: 'value_by_fishery' %>

<%= render partial: 'total_effort' %>

<%= render partial: 'total_value' %>

<%= render partial: 'total_production' %>

<div class="row">
  <%= link_to 'Edit', edit_district_path(@district) %> |
  <%= link_to 'Back', districts_path %>
</div>
