<%= simple_form_for @vessel, html: {class: 'form form-horizontal'} do |f| %>


  <div class="row">

    <div class="col-xs-12 col-md-6 col-md-offset-3">

    <%= f.input :return_to, as: :hidden %>

    <%= f.input :ap2hi_ref %>

    <%= f.input :mmaf_ref %>

    <%= f.input :dkp_ref %>

    <%= f.input :issf_ref %>

    <%= f.input :seafdec_ref %>

    <%= f.input :imo_number %>

    <%= f.input :sipi_number %>

    <%= f.input :formatted_sipi_expiry, as: :string, input_html: { class: 'datepicker' } %>

    <%= f.input :siup_number %>

    <%= f.input :name %>

    <%= f.input :name_changed, input_html: {class: 'js-switch', data: { "secondary-color": '#B71C1C'}} %>


    <%= f.input :operational_type, collection: Vessel::OPERATIONAL_TYPES, input_type: lambda { |s| I18n.t("operational_types.#{s}") } %>

    <%= f.association :company %>

    <%= f.input :relationship_type, collection: Vessel::RELATIONSHIP_TYPES, input_type: lambda { |s| I18n.t("relationship_types.#{s}") } %>

    <%= f.input :owner %>

    <%= f.association :vessel_type %>

    <%= f.input :material_type, collection: Vessel::MATERIAL_TYPES, input_type: lambda {|s| I18n.t("material_types.#{s}") } %>

    <%= f.input :machine_type, collection: Vessel::MACHINE_TYPES, label_type: lambda {|s| I18n.t("machine_types.#{s}") }  %>


    <%= f.input :length %>

    <%= f.input :tonnage %>

    <%= f.input :capacity %>

    <%= f.input :vms, input_html: {class: 'js-switch', data: { "secondary-color": '#B71C1C'}} %>

    <%= f.input :tracker, input_html: {class: 'js-switch', data: { "secondary-color": '#B71C1C'}} %>

    <%= f.input :port %>

    <%= f.input :flag_state, priority: [ "ID" ], as: :country, include_blank: true   %>

    <%= f.input :flag_state_changed, input_html: {class: 'js-switch', data: { "secondary-color": '#B71C1C'}} %>

    <%= f.input :radio, input_html: {class: 'js-switch', data: { "secondary-color": '#B71C1C'}} %>

    <%= f.input :year_built %>

    <%= f.input :location_built %>

    <%= f.input :captain %>

    <%= f.association :gear, label_method: :alpha_code, value_method: :id %>

    <%= f.input :hooks %>

    <%= f.input :fish_capacity %>

    <%= f.input :bait_capacity %>

    <%= f.input :crew %>

    <%= f.input :marked %>

    <%= f.input :member %>

    <%= f.input :cert_type, collection: Vessel::CERT_TYPES, input_type: lambda {|s| I18n.t("cert_types.#{s}") } %>

    <%= f.input :shark_policy, input_html: {class: 'js-switch', data: { "secondary-color": '#B71C1C'}} %>

    <%= f.input :iuu_list, input_html: {class: 'js-switch', data: { "secondary-color": '#B71C1C'}} %>

    <%= f.input :code_of_conduct, input_html: {class: 'js-switch', data: { "secondary-color": '#B71C1C'}} %>

    </div>

  </div>

  <div class="form-group">
    <div class="col-xs-12 text-center">
      <% if f.object.new_record? %>
        <%= link_to "Cancel", vessels_path, class: "btn" %>
      <% else %>
        <%= link_to "Cancel", @vessel, class: "btn" %>
      <% end %>
      <%= content_tag :button, type: :submit, class: 'btn btn-primary' do %>
        Save
      <% end %>
    </div>
  </div>
<% end %>

<br />
