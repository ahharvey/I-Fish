<% title t ".title" %>

<div class="row">
  <div class="span6">
    <div class="pull-right">
      <%= image_tag @currently_signed_in.avatar_url(:large), id: "cropbox" %>
    </div>
  </div>
  <div class="span6">
    <div class="jcrop" style="width:100px; height:100px; overflow:hidden">
      <%= image_tag @currently_signed_in.avatar.url(:large), :id => "preview" %>
    </div>
  </div>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put, :multipart => true}) do |f| %>
  <% %w[x y w h].each do |attribute| %>
      <%= f.hidden_field "crop_#{attribute}" %>
  <% end %>
  <div class="form-actions">
    <%= content_tag :button, type: :submit, class: 'btn btn-primary pull-right', style:"margin-left:20px" do %>
        Crop
     <% end %>
  </div>
<% end %>


<h4>Preview</h4>




