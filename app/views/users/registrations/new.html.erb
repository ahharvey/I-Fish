<% title "Sign up" %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true, class: 'form form-horizontal'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
			<div class="">
				<%= f.input :name %>

				<%= f.input :email %>

				<%= f.input :password %>

    		<%= f.input :password_confirmation %>
			</div>
		</div>

    <div class="form-actions">
    	<div class="">
      	<%= f.submit "Sign up", class: "btn btn-primary"  %>
      </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>

