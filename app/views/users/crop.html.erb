<% title t ".title" %>

<div class="row">
  <div class="col-xs-6">
    <b>1. Drag to select crop area</b>
    <br />
    <br />
    <%= image_tag @currently_signed_in.avatar_url(:large), id: "cropbox" %>
  </div>
  <div class="col-xs-3">
    <b>2. Preview avatar</b>
    <br />
    <br />
    <div class="jcrop" style="width:100px; height:100px; overflow:hidden">
      <%= image_tag @currently_signed_in.avatar.url(:large), :id => "preview" %>
    </div>
  </div>
  <div class="col-xs-3">
    <%= form_for @user, :html => {:method => :put, :multipart => true} do |f| %>
      <% %w[x y w h].each do |attribute| %>
          <%= f.hidden_field "crop_#{attribute}" %>
      <% end %>
      <div class="form-actions">
        <%= content_tag :button, type: :submit, class: 'btn btn-primary btn-lg', style:"margin-left:20px" do %>
            3. Crop
         <% end %>
      </div>
    <% end %>
  </div>
</div>









