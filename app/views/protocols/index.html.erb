<% title t ".title" %>

<%= link_to new_protocol_path, class: "btn btn-mini btn-default", title: "Add new protocol", alt: "New protocol" do %>
  <%= icon fa_new, "NEW" %>
<% end %>

<%= render partial: "shared/api_links", locals: {json: true, xml: true} %>

<table  class="table table-striped table-condensed datatable">
  <thead>
    <tr>
      <th></th>
      <th><%= Protocol.human_attribute_name(:title) %></th>
      <th><%= Protocol.human_attribute_name(:description) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @protocols.each do |protocol| %>
      <tr>
        <td><%= link_to show_icon, protocol %> </td>
        <td><%= protocol.title %></td>
        <td><%= protocol.description %></td>
        <td>
          <% if can? :update, protocol %>
            <%= link_to edit_icon, edit_protocol_path(protocol) %> 
          <% end %>
          <% if can? :destroy, protocol %>
            <%= link_to destroy_icon, protocol, method: :delete, data: { confirm: "This will permanently delete this record and all associated records.\nAre you sure?" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
