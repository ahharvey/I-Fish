<div id="fishery_cpue_by_species" class="row-fluid">
  <div class="span12">

    <h5>Effort by Species (kg per person per hour)</h5>
    <table class="table table-striped table-condensed table-header-rotated">
      <thead>
        <tr>
          <th><%= Fishery.human_attribute_name(:name) %></th>
          <% for fish in @fishes %>
            <th class="rotate-45">
              <div><span>
                <%= link_to fish.code, fish, title: "#{fish.scientific_name} - #{fish.indonesia_name} - #{fish.english_name}" %>
              </span></div>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% for fishery in @fisheries %>
          <tr>
            <th class="row-header"><%= link_to fishery.name, fishery %></th>
            <% for fish in @fishes %>
              <td class="data-cell">
                <%= @fishery_av_cpue_by_species[[fishery.id, fishery.name, fish.id]] || "-" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br />
    <br />
  </div>
</div>