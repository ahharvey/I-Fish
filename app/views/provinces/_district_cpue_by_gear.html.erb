<div id="district_cpue_by_gear" class="row-fluid">
  <div class="span12">
    <%= @test_date %>
<%= @test_year %>

    <h5>Effort by Gear (kg per person per hour)</h5>
    <table class="table table-striped table-condensed table-header-rotated">
      <thead>
        <tr>
          <th><%= District.human_attribute_name(:name) %></th>
          <% for gear in @gears %>
            <th class="rotate-45">
              <div><span>
                <%= link_to gear.alpha_code, gear, title: "#{gear.num_code} - #{gear.name}" %>
              </span></div>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% for district in @districts %>
          <tr>
            <th class="row-header"><%= link_to district.name, district %></th>
            <% for gear in @gears %>
              <td class="data-cell">
                <%= @district_av_cpue_by_gears[[district.id, district.name, gear.id]] || "-" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br />
    <br />
  </div>
</div>