<div id="fishery_cpue_by_gear" class="row-fluid">
  <div class="span12">
    <h5>Effort by Gear (kg per person per hour)</h5>
    <table class="table table-striped table-condensed table-header-rotated">
      <thead>
        <tr>
          <th><%= Fishery.human_attribute_name(:name) %></th>
          <% for gear in @gears %>
            <th class="rotate-45">
              <div><span>
                <%= link_to gear.alpha_code, gear, title: "#{gear.num_code} - #{gear.name}" %>
              </span></div>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% for fishery in @fisheries %>
          <tr>
            <th class="row-header"><%= link_to fishery.name, fishery %></th>
            <% for gears in @gears %>
              <td class="data-cell">
                <%= @fishery_av_cpue_by_gears[[fishery.id, fishery.name, gear.id]] || "-" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br />
    <br />
  </div>
</div>