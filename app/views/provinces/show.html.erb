<% for district in @province.districts %>
  <%= district.name %>
<% end %>

<div class="container">
<div class="row">
  <p>
    <b>Name:</b>
    <%= @province.name %>
  </p>

  <p>
    <b>Code:</b>
    <%= @province.code %>
  </p>
</div>
<div class="row">
  <div id="graph_options">
    <%= text_field_tag "cpe_date_from", @date_from %>
    <%= text_field_tag "cpe_date_to", @date_to %>
    <button class="btn" id="cpe_btn_refresh">Refresh</button>
  </div>
</div>
<div class="row">
  <div id="graph_catch_per_effort_container"></div>
  <script type="text/javascript">
  	function update_catch_effort(){
  		console.log("Updating chart");
  		params = {
  			method: 'catch_per_effort',
  			date_from: $('#cpe_date_from').val(),
  			date_to: $('#cpe_date_to').val(),
  		}

  		$.get("/provinces/<%= @province.id %>", params, function(data, textStatus, jqXHR){
  			console.log(data);
  			render_chart('graph_catch_per_effort_container','Catch per unit effort', 'average kg per hour', '', 'line', data.col_headers, data.month_counts);
  		}, "json");
  	};

  	$(function () {
  		// Event handlers
  		$('#cpe_btn_refresh').click(function(){
  			update_catch_effort();
  		});

      // Initialise date picker
      $("#cpe_date_from").datepicker();
      $("#cpe_date_to").datepicker();


  		// Load chart with default values
  		update_catch_effort();
  	});
  </script>

</div>
<div class="row">
  <div id="graph_length_frequency_options">
    <%= text_field_tag "lf_date_from", @date_from %>
    <%= text_field_tag "lf_date_to", @date_to %>
    <button class="btn" id="btn_lf_refresh">Refresh</button>
  </div>
</div>
<div class="row">
  <div id="graph_length_frequency_container"></div>
  <script type="text/javascript">
  	function update_length_frequency(){
  		params = {
  			method: 'length_frequency',
        date_from: $('#lf_date_from').val(),
        date_to: $('#lf_date_to').val(),
  		}
  		$.get("/provinces/<%= @province.id %>", params, function(data, textStatus, jqXHR){
  			console.log(data);
  			render_chart('graph_length_frequency_container', 'Length Frequency', 'Frequency', 'Size Class', 'column', data.col_headers, data.length_counts);
  		}, "json");
  	};

  	$(function () {
      // Event handlers
      $('#btn_lf_refresh').click(function(){
        update_length_frequency();
      });

      // Initialise date pickers
      $("#lf_date_from").datepicker();
      $("#lf_date_to").datepicker();

  		// Load chart with default values
  		update_length_frequency();
  	});
  </script>

  </div>
  <div class="row">
    <%= link_to 'Edit', edit_province_path(@province) %> |
    <%= link_to 'Back', provinces_path %>
  </div>
</div>
