<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Staff</h3>
  </div>
  <div class="panel-body">
    <% if ( can? :create, Admin ) && ( can? :update, @office ) %>
      <%= form_tag office_add_admin_path(@office), class: "form", method: :post, remote: true do %>
        <%= label_tag 'admin[email]', 'Add a team member', class: 'hidden-xs' %>
        <div class="input-group">
          <%= text_field :admin, :email, class: "form-control", placeholder: "Add a team member...", autocomplete: "off", data: { autocomplete_source: Admin.order(:email).map(&:email) } %>
          <span class="input-group-btn">
            <%= button_tag add_icon, class: "btn btn-success", id: 'add_admin', title: 'Add Admin' %>
          </span>
        </div>
      <% end %>
    <% end %>
    <%= render partial: 'admin_list' %>
  </div>
</div>
