<% title t ".title" %>

<div class="row">
  <div id="supervisor_controls" class= "col-xs-8">
    <%= render partial: "supervisor_controls" %>
  </div>
  <div class="col-xs-4">
    <%= render partial: "shared/api_links", locals: {json: true, xml: true} %>
  </div>

</div>

<br />
<br />


<% present @unloading do |unloading_presenter| %> 

  <div class="row">
    <div class="col-xs-12 col-md-4 ">
      <div class='panel panel-default'>
        <div class="panel-heading">Location</div>
        <div class="panel-body">

          <dl class="dl-horizontal">
            
            <dt><%= Unloading.human_attribute_name(:company) %></dt>
            <dd><%= unloading_presenter.company %></dd>

            <dt><%= Unloading.human_attribute_name(:vessel_id) %></dt>
            <dd><%= unloading_presenter.vessel %></dd>

            <dt><%= Unloading.human_attribute_name(:port_id) %></dt>
            <dd><%= unloading_presenter.port %></dd>

            <dt><%= Unloading.human_attribute_name(:wpp_id) %></dt>
            <dd><%= unloading_presenter.wpp %></dd>
            
          </dl>
        </div>
      </div>

    </div>

    <div class="col-xs-12 col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">Time</div>
        <div class="panel-body">
          <dl class="dl-horizontal">

            <dt><%= Unloading.human_attribute_name(:time_out) %></dt>
            <dd><%= unloading_presenter.time_out %></dd>

            <dt><%= Unloading.human_attribute_name(:time_in) %></dt>
            <dd><%= unloading_presenter.time_in %></dd>

          </dl>
        </div>
      </div>

    </div>

    <div class="col-xs-12 col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">Inputs</div>
        <div class="panel-body">
          <dl class="dl-horizontal">

            <dt><%= Unloading.human_attribute_name(:fuel) %></dt>
            <dd><%= unloading_presenter.fuel %></dd>

            <dt><%= Unloading.human_attribute_name(:ice) %></dt>
            <dd><%= unloading_presenter.ice %></dd>

          </dl>
        </div>
      </div>

    </div>

    <div class="col-xs-12 col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">ETP</div>
        <div class="panel-body">
          <dl class="dl-horizontal">

            <dt><%= Unloading.human_attribute_name(:ept) %></dt>
            <dd><%= unloading_presenter.etp %></dd>

          </dl>
        </div>
      </div>

    </div>


    <div class="col-xs-12 col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">Recorded</div>
        <div class="panel-body">
          <dl class="dl-horizontal">

            
            <dt><%= Unloading.human_attribute_name(:user_id) %></dt>
            <dd><%= unloading_presenter.user %></dd>

          </dl>
        </div>

      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-12 ">

    <div class="panel panel-default">
      <div class="panel-heading">Catch</div>
      <table class="table table-condensed">
        <tr>
          <th><%= UnloadingCatch.human_attribute_name(:fish_id) %></th>
          <th><%= UnloadingCatch.human_attribute_name(:quantity) %></th>
          <th><%= UnloadingCatch.human_attribute_name(:cut_type) %></th>
          <th><%= UnloadingCatch.human_attribute_name(:type) %></th>
          <th><%= UnloadingCatch.human_attribute_name(:size_class_id) %></th>

        </tr>

        <% for unloading_catch in @unloading.unloading_catches %>
          <% present unloading_catch do |unloading_catch_presenter| %> 
            <tr>
              <td><%= unloading_catch_presenter.fish %></td>
              <td><%= unloading_catch_presenter.quantity %></td>
              <td><%= unloading_catch_presenter.cut_type %></td>
              <td><%= unloading_catch_presenter.type %></td>
              <td><%= unloading_catch_presenter.size_class %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>



<%= render partial: 'shared/audit_table', locals: { parent: @unloading } %>

<%= link_to 'Edit', edit_unloading_path(@unloading) %> |
<%= link_to 'Back', unloadings_path %>
