<% title t ".title" %>

<% if @vessel.present? %>
  <% subtitle "#{@vessel.name} (#{@vessel.ap2hi_ref})" %>
<% end %>

<% if admin_signed_in? %>
  <div class="row">
    <div class="col-xs-8">
      
    </div>
    <div class="col-xs-4">
      <%= render partial: "shared/api_links", locals: {json: true, xml: true} %>
    </div>

  </div>
<% end %>

<br />
<br />

<% if @vessel.present? %>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= link_to 'New Unloading', new_vessel_unloading_path(@vessel), class: 'btn btn-lg btn-primary btn-block' %>
      <br />
    </div>
  </div>
<% end %>


<table class="table table-striped table-condensed datatable">
   <thead>
    <tr>
      <th data-sortable="false"></th>
      <th><%= Unloading.human_attribute_name(:port) %></th>
      <th class='hidden-xs'><%= Unloading.human_attribute_name(:time_out) %></th>
      <th><%= Unloading.human_attribute_name(:time_in) %></th>
      <th class='hidden-xs'><%= Unloading.human_attribute_name(:yft) %></th>
      <th class='hidden-xs'><%= Unloading.human_attribute_name(:bet) %></th>
      <th class='hidden-xs'><%= Unloading.human_attribute_name(:skj) %></th>
      <th class='hidden-xs'><%= Unloading.human_attribute_name(:kaw) %></th>
      <th class='hidden-xs'><%= Unloading.human_attribute_name(:byproduct) %></th>
      <th class='hidden-xs'><%= Unloading.human_attribute_name(:discard) %></th>
      <th class='hidden-xs'><%= Unloading.human_attribute_name(:etp) %></th>
      <th class='hidden-xs'><%= Unloading.human_attribute_name(:location) %></th>
      <th class='hidden-xs'><%= Unloading.human_attribute_name(:fuel) %></th>
      <th class='hidden-xs'><%= Unloading.human_attribute_name(:ice) %></th>
      <th data-sortable="false"></th>
    </tr>
  <thead>
  <tbody id="unloadings_tbody">
    <% @unloadings.each do |unloading| %>
      <%= render partial: 'unloadings/tablerow', locals: {unloading: unloading} %>
    <% end %>
  </tbody>
</table>

<br />

<div class="row">
  <div class="col-xs-6">
    <%= link_to :back, class: 'btn btn-primary btn-block' do %>
      <%= icon('arrow-left', 'Back') %>
    <% end %>
  </div>
  
</div>



