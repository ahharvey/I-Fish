<% title t ".title" %>

<div class="row">
  <div class="col-xs-8">
    <%= link_to :back do %>
      <i class='icon-arrow-left'></i> Back
    <% end %>
  </div>
  <div class="col-xs-4">
    <%= render partial: "shared/api_links", locals: {json: true, xml: true} %>
  </div>

</div>

<br />
<br />

<% if @vessel.present? %>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= render partial: "vessels/vessel_summary_panel" %>
    </div>
    <div class="col-xs-12 col-md-6">
      <%= link_to 'New Unloading', '#new_unloading_modal', class: 'btn btn-lg btn-primary btn-block', data: { toggle: 'modal' } %>
    </div>
  </div>
<% end %>


<table class="table table-striped table-condensed datatable">
   <thead>
    <tr>
      <th data-sortable="false"></th>
      <th><%= Unloading.human_attribute_name(:port) %></th>
      <th><%= Unloading.human_attribute_name(:time_out) %></th>
      <th><%= Unloading.human_attribute_name(:time_in) %></th>
      <th><%= Unloading.human_attribute_name(:yft) %></th>
      <th><%= Unloading.human_attribute_name(:bet) %></th>
      <th><%= Unloading.human_attribute_name(:skj) %></th>
      <th><%= Unloading.human_attribute_name(:kaw) %></th>
      <th><%= Unloading.human_attribute_name(:byproduct) %></th>
      <th><%= Unloading.human_attribute_name(:discard) %></th>
      <th><%= Unloading.human_attribute_name(:etp) %></th>
      <th><%= Unloading.human_attribute_name(:location) %></th>
      <th><%= Unloading.human_attribute_name(:fuel) %></th>
      <th><%= Unloading.human_attribute_name(:ice) %></th>
      <th data-sortable="false"></th>
    </tr>
  <thead>
  <tbody id="unloadings_tbody">
    <% @unloadings.each do |unloading| %>
      <%= render partial: 'unloadings/tablerow', locals: {unloading: unloading} %>
    <% end %>
  </tbody>
</table>

<br />


<% if @vessel.present? %>
  <%# Bootstrap modal markup. @see: http://getbootstrap.com/javascript/#modals %>
  <div class="modal fade" id="new_unloading_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Unloading Record - <%= @vessel.name %> <small><i>(<%= @vessel.ap2hi_ref %>)</i></small></h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-xs-12">
              <%# Render the new person form (passing modal => true to enable remote => true) %>
              <%= render 'form', modal: true %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

