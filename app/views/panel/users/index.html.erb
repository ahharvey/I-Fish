<% title "Users" %>

<table class="table table-striped table-condensed">
  <tr>
    <th></th>
    <th>Name</th>
    <th></th>
  </tr>
  <% for user in @users %>
  <tr>
    <td><%= image_tag(user.avatar_url(:thumb), width: "30px", height: "30px") %></td>
    <td><%= link_to user.name, [:panel, user] %></td>
    <td>
      <%= link_to show_icon, [:panel, user] %>
    </td>
  </tr>
  <% end %>
 </table>