<div id="RoleList">
  <ul>
    <% @user.roles.each do |role| %>
      <li>
        <%= role.name %>
        <% if can? :update, @user %>
          <%= link_to remove_icon, delete_role_panel_user_path(@user, :role=>role.id), method: :delete, confirm: 'Are you sure?', remote: true %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
