<% title t ".title" %>

<% if can? :create, Bait %>
  <%= link_to new_bait_path, class: "btn btn-mini btn-default", title: "Create new bait", alt: "New bait" do %>
    <%= add_icon %>
    NEW
  <% end %>

<% end %>
<br />
<br />
<table class="table table-striped table-condensed datatable">
   <thead>
    <tr>
      <th data-sortable="false"></th>
      <th><%= Bait.human_attribute_name(:code) %></th>
      <th><%= Bait.human_attribute_name(:name) %></th>
      <th data-sortable="false"></th>
    </tr>
  <thead>
  <tbody id="baits_tbody">
    <% @baits.each do |bait| %>
      <%= render partial: 'tablerow', locals: {bait: bait} %>
    <% end %>
  </tbody>
</table>

<br />

<div class="row">
  <div class="col-xs-6">
    <%= link_to :back, class: 'btn btn-primary btn-block' do %>
      <%= icon('arrow-left', 'Back') %>
    <% end %>
  </div>
  
</div>
