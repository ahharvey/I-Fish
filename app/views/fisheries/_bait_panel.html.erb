<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Bait Species</h3>
  </div>
  <div class="panel-body">
    <% if can? :update, @fishery %>
      <%= form_tag [:add_bait_fish, @fishery], class: "form", :remote=>true do %>
        <div class="input-group"> 
          <%= text_field_tag :get_bait, "", class: "form-control", placeholder: "Add a bait fish...", autocomplete: "off", data: { autocomplete_source: Fish.order(:code).map(&:code) } %>
          <div class="input-group-btn">
            <%= button_tag add_icon, class: "btn btn-success" %>
          </div>
        </div>
      <% end %>

    <% end %>
    <%= render partial: 'bait_list' %>
  </div>
</div>