<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Gears</h3>
  </div>
  <div class="panel-body">
    <% if can? :update, @fishery %>
      <%= form_tag fishery_add_gear_path(@fishery), class: "form", method: :post, remote: true do %>
        <%= label_tag 'gear[get_gear]', 'Add a gear', class: 'sr-only' %>
        <div class="input-group">
          <%= text_field :gear, :get_gear, class: "form-control", placeholder: "Add a gear...", autocomplete: "off", data: { autocomplete_source: Gear.order(:alpha_code).map(&:alpha_code) } %>
          <div class="input-group-btn">
            <%= button_tag add_icon, class: "btn btn-success", id: 'add_gear', title: 'Add Gear' %>
          </div>
        </div>
      <% end %>

    <% end %>
    <%= render partial: 'gear_list' %>
  </div>
</div>
