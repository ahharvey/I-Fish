<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Member Companies</h3>
  </div>
  <div class="panel-body">
    <% if can? :update, @fishery %>
      <%= form_tag [:add_member_company, @fishery], class: "form", :remote=>true do %>
        <div class="input-group"> 
          <%= text_field_tag :get_company, "", class: "form-control", placeholder: "Add a company...", autocomplete: "off", data: { autocomplete_source: Company.order(:name).map(&:name) } %>
          <div class="input-group-btn">
            <%= button_tag add_icon, class: "btn btn-success" %>
          </div>
        </div>
      <% end %>

    <% end %>
    <%= render partial: 'company_list' %>
  </div>
</div>