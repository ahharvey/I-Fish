<% title t ".title" %>

<%= render partial: "shared/api_links", locals: { json: true, xml: true, xls: true } %>



<div class="container">
<div class="row">
  <p>
    <b>Name:</b>
    <%= @fishery.name %>
  </p>

  <p>
    <b>Code:</b>
    <%= @fishery.code %>
  </p>
</div>
<div class="row">
  <div class="span12">
    <form class="form-inline" id="graph_options">
      <%= text_field_tag "cpe_date_from", @date_from, class: "span2" %>
      <%= text_field_tag "cpe_date_to", @date_to, class: "span2" %>
      <button class="btn" id="cpe_btn_refresh">Refresh</button>
    </form>
  </div>
</div>
<div class="row">
  <div class="span12">
    Surveys : <%= @fishery.surveys.count %>
  </div>
</div>
<br />
<br />
<div class="row">
  <div class="span12">
    <div id="graph_catch_per_effort_container" data-id= <%= @fishery.id %> ></div>
  </div>
</div>
<br />
<br />
<div class="row">
  <div class="span12">
    <div id="graph_values_container" data-id = <%= @fishery.id %> ></div>
  </div>
</div>
<br />
<br />
<div class="row">
  <div class="span12">
    <div id="graph_activity_container" data-id = <%= @fishery.id %> ></div>
  </div>
</div>
<br />
<br />
<div class="row">
  <div class="span6">
    <div id="graph_catch_composition" data-id= <%= @fishery.id %>></div>
  </div>
  <div class="span6">
    <div id="graph_length_container" data-id= <%= @fishery.id %>></div>
  </div>
</div>

  <div class="row">
    <%= link_to 'Edit', edit_fishery_path(@fishery) %> |
    <%= link_to 'Back', fisheries_path %>
  </div>
</div>
