<% if can? :update, @survey %>
  <div class="row-fluid">
    <div class="span4">
      <%= link_to :back  do %>
        <i class='icon-arrow-left'></i> Back 
      <% end %>
    </div>
    <div class="span6 offset2">
      <div class="row-fluid">
        <%= link_to reject_survey_path(@survey), 
          class: "span4 btn btn-large #{@survey.rejected? ? 'btn-danger' : '' }", 
          method: :put, 
          remote: true do 
          %>
            <i class='icon-remove-sign icon-large'></i>
            Rejected
        <% end %>  
        <%= link_to pend_survey_path(@survey), 
          class: "span4 btn btn-large #{@survey.pending? ? 'btn-warning' : '' }", 
          method: :put, 
          remote: true do
          %>
          <i class='icon-warning-sign icon-large'></i>
          Pending
        <% end %>
        <%= link_to approve_survey_path(@survey), 
          class: "span4 btn btn-large #{@survey.approved? ? 'btn-success' : '' }", 
          method: :put, 
          remote: true do 
          %>
          <i class="icon-ok-sign icon-large"></i>
          Approved
        <% end %>
      </div>
    </div>
  </div>

<% end %>