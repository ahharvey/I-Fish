<h1>Listing surveys</h1>

<table class="table-bordered table-striped table table-hover">
  <tr>
    <th>Date</th>
    <th>User</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Desa</th>
    <th>Fleet Observer</th>
    <th>Catch Measure</th>
    <th>Catch Scribe</th>
    <th>Fishery</th>
    <th></th>
  </tr>

  <% @surveys.each do |survey| %>
    <tr>
      <td><%= survey.date_published rescue '' %></td>
      <td><%= survey.user.email rescue ''%></td>
      <td><%= survey.start_time %></td>
      <td><%= survey.end_time %></td>
      <td><%= survey.desa.name rescue '' %></td>
      <td><%= survey.fleet_observer %></td>
      <td><%= survey.catch_measure %></td>
      <td><%= survey.catch_scribe %></td>
      <td><%= survey.fishery.name rescue ''%></td>
      <td>
        <%= link_to 'Show', survey %>
        <%= link_to 'Edit', edit_survey_path(survey) %>
        <%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Survey', new_survey_path %>
