<%= simple_form_for @admin,  html: {class: 'form form-horizontal'} do |f| %>
	
	<div class="row">
		<div class="span6">
			<%= f.input :name %>

			<%= f.input :email %>

			<%= f.association :office %>
		</div>
		<div class="span6">
			<%= f.input :avatar %>
		</div>
	</div>
	
	<div class="form-actions">

    <%= content_tag :button, type: :submit, class: 'btn btn-primary pull-right', style:"margin-left:20px" do %>
      Save
    <% end %>

    <% if !f.object.new_record? %>
      <%= link_to "Cancel", @admin, :class=>"btn pull-right" %>

    <% else %>
      <%= link_to "Cancel", admins_path, :class=>"btn pull-right" %>
    <% end %> 
  </div>

<% end %>
