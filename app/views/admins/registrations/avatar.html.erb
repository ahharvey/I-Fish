<% title t ".title" %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, class: 'form form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

    

    <div class="row">
      <div class="span6">
        <%= f.input :avatar %>
      </div>
    </div>

    <div class="form-actions">
      <%= content_tag :button, type: :submit, class: 'btn btn-primary pull-right', style:"margin-left:20px" do %>
        Next
      <% end %>
    </div>
<% end %>