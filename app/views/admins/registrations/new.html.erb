<% title "Sign up" %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true, class: 'form form-horizontal'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
			<div class="span6">
				<%= f.input :name %>

				<%= f.input :email %>

				<%= f.association :office %>

				<%= f.input :password %>

    		<%= f.input :password_confirmation %>
			</div>
			<div class="span6">
				<%= f.input :avatar %>
			</div>
		</div>

    <div class="form-actions">
      <%= f.submit "Submit for Approval", class: "btn btn-primary"  %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
