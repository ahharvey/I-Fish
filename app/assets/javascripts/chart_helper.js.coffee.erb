fetchLength = (species, id) ->
  params =
    method: "length_frequency"
    date_from: $("#cpe_date_from").val()
    date_to: $("#cpe_date_to").val()
    species: species
  $.ajax
    url: "/fisheries/" + id
    type: "GET"
    async: true
    data: params
    dataType: "json"
    success: (data) ->
      lengthData(species, data)

